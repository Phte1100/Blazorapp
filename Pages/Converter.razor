@page "/converter"

<div>
    <label for="celsiusInput">Celsius:</label>
    <input type="number" id="celsiusInput" @bind="celsius" @oninput="ConvertToFahrenheit" />
    <p>Fahrenheit: @fahrenheit</p>
</div>

<div>
    <label for="fahrenheitInput">Fahrenheit:</label>
    <input type="number" id="fahrenheitInput" @bind="fahrenheit" @oninput="ConvertToCelsius" />
    <p>Celsius: @celsius</p>
</div>

@code {
    private double celsius;
    private double fahrenheit;

    private void ConvertToFahrenheit(ChangeEventArgs e)
    {
        if (double.TryParse(e.Value.ToString(), out double value))
        {
            celsius = value;
            fahrenheit = Math.Round((celsius * 9 / 5) + 32, 2);
        }
    }

    private void ConvertToCelsius(ChangeEventArgs e)
    {
        if (double.TryParse(e.Value.ToString(), out double value))
        {
            fahrenheit = value;
            celsius = Math.Round((fahrenheit - 32) * 5 / 9, 2);
        }
    }
}